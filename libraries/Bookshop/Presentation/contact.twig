{% extends "main.twig" %}
{% block varaibelen %}
    {%set active_page = "contact" %}
{% endblock %}

{% block content %}
<div class="container">
    <div class="col-md-6 col-md-offset-3">
<form role="form" id="feedbackForm">
    <div class="form-group has-feedback"> 
        <label class="control-label" for="naam">Naam</label>
        <input type="text" class="form-control" id="naam" name="naam">
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
        <span class="help-block" style="display:none;">Uw naam ?</span>
    </div>
    <div class="form-group has-feedback">
        <label class="control-label" for="voornaam">Voornaam</label>
        <input type="text" class="form-control" id="voornaam" name="voornaam">
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
        <span class="help-block" style="display:none;">Uw voornaam ?</span>
    </div>
    <div class="form-group has-feedback">
        <label class="control-label" for="email">E-Mail</label>
        <input type="email" class="form-control optional" id="email" name="email">
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
        <span class="help-block" style="display:none;">Uw e-mail ?</span>
    </div>
    <div class="form-group has-feedback">
        <label class="control-label" for="adres">Adres</label>
        <input type="text" class="form-control" id="adres" name="adres" placeholder="straat, huisnr">
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
        <span class="help-block" style="display:none;">Uw adres ?</span>
    </div>
    <div class="form-group has-feedback">
        <label class="control-label" for="postcode">Postcode</label>
        <input type="text" class="form-control" id="postcode" name="postcode">
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
        <span class="help-block" style="display:none;">Uw postcode ? </span>
    </div>
    <div class="form-group has-feedback">
        <label class="control-label" for="gemeente">Gemeente</label>
        <input type="text" class="form-control" id="gemeente" name="gemeente">
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
        <span class="help-block" style="display:none;">Uw gemeente ? </span>
    </div>
    <div class="form-group has-feedback">
        <label class="control-label" for="boodschap">Uw vraag <span class="glyphicon glyphicon-asterisk"></span></label>
        <textarea rows="10" cols="100" class="form-control" id="boodschap" name="boodschap"></textarea>
        <span class="help-block" style="display: none;">Gelieve een boodschap in te geven.</span>
        </div>
        <img id="captcha" src="library/vender/securimage/securimage_show.php" alt="CAPTCHA Image" />
        <a href="#" onclick="document.getElementById('captcha').src = 'library/vender/securimage/securimage_show.php?' + Math.random(); return false" class="btn btn-info btn-sm">Toon andere afbeelding</a><br/>
        <div class="form-group has-feedback" style="margin-top: 10px;">
        <label class="control-label" for="message"></label>
        <input type="text" class="form-control" name="captcha_code" id="captcha_code" placeholder="Beveiligingscode" />
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
        <span class="help-block" style="display: none;">Gelieve de code uit de afbeelding in te geven</span>
        </div>
        <span class="help-block" style="display: none;">Gelieve de beveiligingscode in te voeren</span>
        <button type="submit" id="feedbackSubmit" class="btn btn-primary btn-lg" style="display: block; margin-top: 10px;">Stuur bericht</button>
        </form>
        </div>
    </div>
{% endblock %}