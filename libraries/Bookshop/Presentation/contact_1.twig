{% extends "main.twig" %}

{% block content %}
    <div class="col-md-6 col-md-offset-3">
        <p>&nbsp;</p>
<form role="form" id="contactUsForm">
    <div class="form-group has-feedback">
        <label class="control-label" for="naam">Naam</label>
        <input type="text" class="form-control" id="naam" name="naam">
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        <label class="control-label" for="voornaam">Voornaam</label>
        <input type="text" class="form-control" id="voornaam" name="voornaam">
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
        <span class="help-block" style="display:none;">Uw voornaam ?</span>
    </div>
    <div class="form-group has-feedback">
        <label class="control-label" for="email">E-Mail</label>
        <input type="email" class="form-control optional" id="email" name="email" placeholder="iemand@voorbeeld.be">
        <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
        <span class="help-block" style="display:none;">Uw e-mail ?</span>
    </div>
    <div class="form-group has-feedback">
        <label class="control-label" for="boodschap">Uw bericht <span class="glyphicon glyphicon-asterisk"></span></label>
        <textarea rows="10" cols="100" class="form-control" id="boodschap" name="boodschap"></textarea>
        <span class="help-block" style="display: none;">Gelieve een boodschap in te geven.</span>
    </div>
    <img id="captcha" src="libraries/securimage/securimage_show.php" alt="CAPTCHA Image" />
        <a href="#" onclick="document.getElementById('captcha').src = 'libraries/securimage/securimage_show.php?' + Math.random(); return false" class="btn btn-info btn-sm">Toon andere afbeelding</a><br/>
        <div class="form-group has-feedback" style="margin-top: 10px;">
            <label class="control-label" for="message"></label>
            <input type="text" class="form-control" name="captcha_code" id="captcha_code" placeholder="Beveiligingscode" />
            <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
            <span class="help-block" style="display: none;">Foute beveiligingscode.</span>
        </div>
        <button type="submit" id="feedbackSubmit" class="btn btn-primary pull-right">Verzenden</button>
        </form>
    </div>
{% endblock %}