{# Header template voor bookshop #}
{% block siteheader %}
    <div class="top-page">
    <div id="js_warning"><strong>Deze site vereist Javascript, gelieve javascript aan te zetten en de pagina opnieuw te laden !!</strong></div>
<div class="container">
    {% block navigation %}
<div class="col-md-6 col-sm-6">
<nav class="nav" id="hoofdmenu">
    <ul class="nav nav-tabs">
        {% for item in navigation_bar %}
        <li{% if item[0] == page %} class="active"{% endif %}>
            <a href="index.php?id={{item[0] }}">{{item[1]}}</a></li>
        {% endfor %}
    </ul>
        
        
</nav>
</div>


{% endblock %}

<div class="pull-right">
    
{% if user %}
    U bent ingelogd als {{user.voornaam}} {{user.naam}} 
    <a href="index.php?actie=uitloggen">
        <button class="btn btn-primary">Uitloggen</button>
    </a>
        
        {% else %}
            <button id="btnShowHide" class="btn btn-primary" role="button">Login</button>
            <button id="btnShowHide2" class="btn btn-primary" role="button">Registreer</button>
    {% endif %}
</div>
</div>
    </div>
<div class="header-items">
<div class="container">
    <div class="col-md-6 logo">
        <a href="index.php"><img class="img-responsive" src="images/logo.jpg" ></a>
    </div>
    
{#    Rechterkant header plaats voorzien voor cart-items, login en registratieformulieren#}
                
    <div id="showMe" class="well headerform col-md-6 col-sm-6 pull-right" style="display:none;">
        <form role="login" class="form-inline" method="post" action="login.php">
            <div class="form-group">
                <label class="sr-only" for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="e-mail"/>
            </div>  
            <div class="form-group">
                <label class="sr-only" for="password">wachtwoord</label>
                <input type="password" name="password" id="password" placeholder="wachtwoord"/>
            </div>
            <button type="submit" class="btn btn-primary">Inloggen</button>
        </form>
    </div>

    <div class="col-md-6 col-sm-6 cart">
       {% if cartItems %}
    
        <h3>Uw winkelwagentje</h3>
        <table>
        {% for product in cartItems %}
            <tr>
                <td>{{ product[1] }} x</td>
                <td>{{ product[0].titel }}</td>
                <td> {{ product[0].prijs }} &euro;</td>
                <td><a href="updateCart.php?actie=delete&id={{ product[0].id }}&returnurl={{current_url}}"><button type="button" class=btn btn-small btn-danger"><span class="glyphicon glyphicon-remove"></span></button></a>
                
            </tr>
        {% endfor %}
                <tr style="border-top:1px solid;">
                <td colspan="2"> Totaal :</td>
                <td>{{ totaal }} &euro;</td>
                </tr>
        
        <tr style="border-top:1px solid;">
            <td><a href="index.php?id=viewCart">betalen</a></td>
            <td><a href="updateCart.php?reset=1&returnurl={{ current_url }}">Wissen</a></td>
            </tr>
            </table>
      
        {% endif %}
  
    
    </div>
<div id="showMe2" class="well headerform col-md-6 col-sm-6 pull-right" style="display:none;">
                    {% include 'contactform.template.twig' %}
                </div>

</div>
{% endblock siteheader %}
